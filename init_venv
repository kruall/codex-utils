#!/usr/bin/env bash
set -euo pipefail

# Always restore working directory on exit
cleanup() {
    popd >/dev/null || true
}

pushd "$(dirname "$0")" >/dev/null
trap cleanup EXIT

if [ ! -d ".venv" ]; then
    python3 -m venv .venv
fi

source .venv/bin/activate
if [ -z "$TM_NO_INSTALL" ]; then
    if ! pip install -r requirements.txt; then
        echo "pip install failed, continuing"
    fi
fi

